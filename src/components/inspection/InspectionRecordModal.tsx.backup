import { useState, useEffect } from 'react';
import { X, CheckCircle, XCircle, Camera, History, Mic, Square, Loader2, WifiOff, Trash2 } from 'lucide-react';
import { InspectionPoint, InspectionResult } from '@/types';
import { format } from 'date-fns';
import { ja } from 'date-fns/locale/ja';
import { useAudioRecorder } from '@/hooks/useAudioRecorder';
import { useCameraCapture } from '@/hooks/useCameraCapture';
import { transcribeAudio } from '@/services/gemini/audioTranscription';
import { isOnline } from '@/services/sync/syncService';

interface InspectionRecordModalProps {
  point: InspectionPoint;
  inspectionResult?: InspectionResult | null;
  onClose: () => void;
  onSave: (data: { status: 'ok' | 'fail'; notes: string; photos: string[] }) => void;
}

export const InspectionRecordModal = ({
  point,
  inspectionResult,
  onClose,
  onSave,
}: InspectionRecordModalProps): JSX.Element => {
  const [status, setStatus] = useState<'ok' | 'fail' | null>(null);
  const [notes, setNotes] = useState('');
  const [showHistory, setShowHistory] = useState(false);
  const [isTranscribing, setIsTranscribing] = useState(false);
  const [online, setOnline] = useState(isOnline());
  const [showCamera, setShowCamera] = useState(false);

  // 音声録音フック
  const [audioState, audioControls] = useAudioRecorder();

  // カメラキャプチャフック
  const [cameraState, cameraControls, videoRef] = useCameraCapture();

  // オンライン状態の監視
  useEffect(() => {
    const handleOnline = () => setOnline(true);
    const handleOffline = () => {
      setOnline(false);
      // オフラインになったら録音とカメラを停止
      if (audioState.isRecording) {
        audioControls.stopRecording();
        audioControls.clearRecording();
      }
      if (cameraState.isStreaming) {
        cameraControls.stopCamera();
        setShowCamera(false);
      }
    };

    window.addEventListener('online', handleOnline);
    window.addEventListener('offline', handleOffline);

    return () => {
      window.removeEventListener('online', handleOnline);
      window.removeEventListener('offline', handleOffline);
    };
  }, [audioState.isRecording, audioControls, cameraState.isStreaming, cameraControls]);

  const handleSave = () => {
    if (status) {
      onSave({ status, notes, photos: cameraState.photos });
      onClose();
    }
  };

  /**
   * カメラ表示切り替え
   */
  const handleToggleCamera = async () => {
    if (showCamera) {
      // カメラを閉じる
      cameraControls.stopCamera();
      setShowCamera(false);
    } else {
      // カメラを開く
      setShowCamera(true);
      await cameraControls.startCamera();
    }
  };

  /**
   * 音声録音の開始/停止
   */
  const handleVoiceInput = async () => {
    if (audioState.isRecording) {
      // 録音停止
      audioControls.stopRecording();
    } else {
      // 録音開始
      await audioControls.startRecording();
    }
  };

  /**
   * 音声をテキストに変換
   */
  const handleTranscribe = async () => {
    if (!audioState.audioBlob) {
      alert('録音データがありません');
      return;
    }

    setIsTranscribing(true);
    try {
      const text = await transcribeAudio(audioState.audioBlob);
      // 既存のメモに追加
      setNotes((prev) => {
        if (prev) {
          return `${prev}\n${text}`;
        }
        return text;
      });
      audioControls.clearRecording();
    } catch (error) {
      console.error('Transcription error:', error);
      alert('音声のテキスト変換に失敗しました');
    } finally {
      setIsTranscribing(false);
    }
  };

  /**
   * 録音のキャンセル
   */
  const handleCancelRecording = () => {
    if (audioState.isRecording) {
      audioControls.stopRecording();
    }
    audioControls.clearRecording();
  };

  /**
   * 録音時間を表示用にフォーマット
   */
  const formatRecordingTime = (seconds: number): string => {
    const mins = Math.floor(seconds / 60);
    const secs = seconds % 60;
    return `${mins}:${secs.toString().padStart(2, '0')}`;
  };

  return (
    <div className="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 p-4">
      <div className="bg-white rounded-lg shadow-xl max-w-md w-full max-h-[90vh] flex flex-col">
        {/* ヘッダー */}
        <div className="flex items-center justify-between p-4 border-b flex-shrink-0">
          <h3 className="text-lg font-semibold text-gray-900">点検記録</h3>
          <button
            onClick={onClose}
            className="text-gray-400 hover:text-gray-600"
          >
            <X className="w-5 h-5" />
          </button>
        </div>

        {/* コンテンツ（スクロール可能） */}
        <div className="p-4 space-y-4 overflow-y-auto flex-1">
          {/* 設備情報 */}
          <div className="bg-gray-50 rounded-lg p-3">
            <div className="text-sm text-gray-600">設備名</div>
            <div className="font-medium text-gray-900">{point.name}</div>
            <div className="text-xs text-gray-500 mt-1">
              種別: {point.type}
            </div>
          </div>

          {/* 点検結果 */}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              点検結果 <span className="text-red-500">*</span>
            </label>
            <div className="grid grid-cols-2 gap-3">
              <button
                onClick={() => setStatus('ok')}
                className={`flex items-center justify-center gap-2 px-4 py-3 rounded-lg border-2 transition-all ${
                  status === 'ok'
                    ? 'border-green-500 bg-green-50 text-green-700'
                    : 'border-gray-300 hover:border-green-300 text-gray-700'
                }`}
              >
                <CheckCircle className="w-5 h-5" />
                <span className="font-medium">正常</span>
              </button>
              <button
                onClick={() => setStatus('fail')}
                className={`flex items-center justify-center gap-2 px-4 py-3 rounded-lg border-2 transition-all ${
                  status === 'fail'
                    ? 'border-red-500 bg-red-50 text-red-700'
                    : 'border-gray-300 hover:border-red-300 text-gray-700'
                }`}
              >
                <XCircle className="w-5 h-5" />
                <span className="font-medium">異常</span>
              </button>
            </div>
          </div>

          {/* 備考 */}
          <div>
            <label
              htmlFor="notes"
              className="block text-sm font-medium text-gray-700 mb-2"
            >
              備考・特記事項
            </label>
            <textarea
              id="notes"
              value={notes}
              onChange={(e) => setNotes(e.target.value)}
              rows={3}
              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500"
              placeholder="気になった点や詳細を記入してください"
            />
          </div>

          {/* 音声入力 */}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              音声入力
            </label>

            {/* オフライン時のメッセージ */}
            {!online && (
              <div className="w-full flex items-center gap-2 px-4 py-3 bg-gray-100 border-2 border-gray-300 rounded-lg text-gray-500">
                <WifiOff className="w-5 h-5" />
                <span>オフライン時は音声入力を使用できません</span>
              </div>
            )}

            {/* 録音中でない場合（オンライン時のみ） */}
            {online && !audioState.isRecording && !audioState.audioBlob && (
              <button
                onClick={handleVoiceInput}
                className="w-full flex items-center justify-center gap-2 px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
              >
                <Mic className="w-5 h-5" />
                <span>音声で入力</span>
              </button>
            )}

            {/* 録音中 */}
            {audioState.isRecording && (
              <div className="border-2 border-red-500 rounded-lg p-4 bg-red-50">
                <div className="flex items-center justify-between mb-3">
                  <div className="flex items-center gap-2">
                    <div className="w-3 h-3 bg-red-500 rounded-full animate-pulse" />
                    <span className="text-red-700 font-medium">録音中</span>
                  </div>
                  <span className="text-red-700 font-mono">
                    {formatRecordingTime(audioState.recordingTime)}
                  </span>
                </div>
                <button
                  onClick={handleVoiceInput}
                  className="w-full flex items-center justify-center gap-2 px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors"
                >
                  <Square className="w-4 h-4" />
                  <span>録音停止</span>
                </button>
              </div>
            )}

            {/* 録音データがある場合 */}
            {audioState.audioBlob && !audioState.isRecording && (
              <div className="border-2 border-green-500 rounded-lg p-4 bg-green-50">
                <div className="flex items-center justify-between mb-3">
                  <span className="text-green-700 font-medium">録音完了</span>
                  <span className="text-green-700 text-sm">
                    {formatRecordingTime(audioState.recordingTime)}
                  </span>
                </div>
                <div className="flex gap-2">
                  <button
                    onClick={handleTranscribe}
                    disabled={isTranscribing}
                    className="flex-1 flex items-center justify-center gap-2 px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                  >
                    {isTranscribing ? (
                      <>
                        <Loader2 className="w-4 h-4 animate-spin" />
                        <span>変換中...</span>
                      </>
                    ) : (
                      <>
                        <CheckCircle className="w-4 h-4" />
                        <span>テキスト化</span>
                      </>
                    )}
                  </button>
                  <button
                    onClick={handleCancelRecording}
                    disabled={isTranscribing}
                    className="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-100 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                  >
                    キャンセル
                  </button>
                </div>
              </div>
            )}
          </div>

          {/* 写真撮影 */}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              写真
            </label>

            {/* オフライン時のメッセージ */}
            {!online && (
              <div className="w-full flex items-center gap-2 px-4 py-3 bg-gray-100 border-2 border-gray-300 rounded-lg text-gray-500">
                <WifiOff className="w-5 h-5" />
                <span>オフライン時は写真撮影を使用できません</span>
              </div>
            )}

            {/* カメラ未起動時（オンライン時のみ） */}
            {online && !showCamera && cameraState.photos.length === 0 && (
              <button
                onClick={handleToggleCamera}
                className="w-full flex items-center justify-center gap-2 px-4 py-3 border-2 border-dashed border-gray-300 rounded-lg text-gray-600 hover:border-gray-400 hover:text-gray-700 transition-colors"
              >
                <Camera className="w-5 h-5" />
                <span>写真を撮影</span>
              </button>
            )}

            {/* カメラエラー */}
            {cameraState.error && (
              <div className="p-3 bg-red-50 border border-red-300 rounded-lg text-red-700 text-sm">
                {cameraState.error}
              </div>
            )}

            {/* カメラプレビュー */}
            {showCamera && (
              <div className="space-y-3">
                <div className="relative bg-black rounded-lg overflow-hidden">
                  <video
                    ref={videoRef}
                    autoPlay
                    playsInline
                    className="w-full h-64 object-cover"
                  />
                </div>
                <div className="flex gap-2">
                  <button
                    onClick={cameraControls.capturePhoto}
                    className="flex-1 flex items-center justify-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
                  >
                    <Camera className="w-4 h-4" />
                    <span>撮影</span>
                  </button>
                  <button
                    onClick={handleToggleCamera}
                    className="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-100 transition-colors"
                  >
                    閉じる
                  </button>
                </div>
              </div>
            )}

            {/* 撮影済み写真 */}
            {cameraState.photos.length > 0 && (
              <div className="space-y-2">
                <div className="grid grid-cols-2 gap-2">
                  {cameraState.photos.map((photo, index) => (
                    <div key={index} className="relative group">
                      <img
                        src={photo}
                        alt={`写真 ${index + 1}`}
                        className="w-full h-32 object-cover rounded-lg border border-gray-300"
                      />
                      <button
                        onClick={() => cameraControls.removePhoto(index)}
                        className="absolute top-1 right-1 p-1 bg-red-600 text-white rounded-full opacity-0 group-hover:opacity-100 transition-opacity"
                      >
                        <Trash2 className="w-4 h-4" />
                      </button>
                    </div>
                  ))}
                </div>
                {!showCamera && (
                  <button
                    onClick={handleToggleCamera}
                    className="w-full flex items-center justify-center gap-2 px-4 py-2 border-2 border-dashed border-gray-300 rounded-lg text-gray-600 hover:border-gray-400 hover:text-gray-700 transition-colors"
                  >
                    <Camera className="w-4 h-4" />
                    <span>さらに撮影</span>
                  </button>
                )}
              </div>
            )}
          </div>

          {/* 点検履歴 */}
          {inspectionResult && inspectionResult.records.length > 0 && (
            <div>
              <button
                onClick={() => setShowHistory(!showHistory)}
                className="flex items-center gap-2 text-sm font-medium text-gray-700 hover:text-gray-900"
              >
                <History className="w-4 h-4" />
                <span>
                  点検履歴を{showHistory ? '非表示' : '表示'}
                  {inspectionResult.hasConflict && (
                    <span className="ml-2 text-yellow-600 font-semibold">
                      (競合あり)
                    </span>
                  )}
                </span>
              </button>

              {showHistory && (
                <div className="mt-2 space-y-2 max-h-48 overflow-y-auto">
                  {inspectionResult.records.map((record, index) => (
                    <div
                      key={index}
                      className="p-3 bg-gray-50 rounded-lg border border-gray-200"
                    >
                      <div className="flex items-center justify-between mb-2">
                        <div className="flex items-center gap-2">
                          <span className="text-sm font-medium text-gray-900">
                            {record.userName}
                          </span>
                          {record.itemResults.some((item) => item.status === 'fail') ? (
                            <XCircle className="w-4 h-4 text-red-600" />
                          ) : (
                            <CheckCircle className="w-4 h-4 text-green-600" />
                          )}
                        </div>
                        <span className="text-xs text-gray-500">
                          {format(record.timestamp, 'MM/dd HH:mm', { locale: ja })}
                        </span>
                      </div>
                      {record.itemResults.map((item, itemIndex) => (
                        <div key={itemIndex} className="text-sm text-gray-600">
                          {item.notes && <p>{item.notes}</p>}
                        </div>
                      ))}
                    </div>
                  ))}
                </div>
              )}
            </div>
          )}
        </div>

        {/* フッター */}
        <div className="flex items-center gap-3 p-4 border-t bg-gray-50 flex-shrink-0">
          <button
            onClick={onClose}
            className="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-100 transition-colors"
          >
            キャンセル
          </button>
          <button
            onClick={handleSave}
            disabled={!status}
            className="flex-1 px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
          >
            記録を保存
          </button>
        </div>
      </div>
    </div>
  );
};
